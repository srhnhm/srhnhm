@font-face {
  font-family: "Benton";
  font-weight: normal;
  src: url('../fonts/BentonSans-Regular.otf');
}

@font-face {
  font-family: "Benton-Bold";
  font-weight: bold;
  src: url('../fonts/BentonSans-Bold.otf');
}


body
  -webkit-text-size-adjust: 100%

*
  box-sizing: border-box


//TYPOGRAPHY

accentColor = #505050
textColor = #858585

h1, p
  color: textColor
  font-size: 16px
  font-family: 'Benton', sans-serif
  font-weight: normal
  line-height: 1.75em
  -webkit-font-smoothing: antialiased

p
  padding-bottom: 8px

$bold-font
  font-family: 'Benton-Bold', sans-serif
  font-weight: bold

h1
  @extend $bold-font
  color: accentColor

a
  color: accentColor
  text-decoration: none
  &:hover
    border-bottom: 1px solid accentColor

//LAYOUT
.container
  position: absolute
  left: 0
  right: 0
  top: 0
  bottom: 0

.content-wrapper
  display: table
  width: 100%
  height: 100%
.content
  display: table-cell
  vertical-align: middle
.col
  float: left
  width: 50%
  padding: 50px
  height: 100%
  p
    max-width: 460px

.left
  text-align: right
  width: 45%
.right
  text-align: left
  width: 55%


//animation

.animate
  transition-property: transform, opacity
  transition-duration: .6s
  opacity: 1
  transform: translate3d(0, 0, 0)
  transform: translateX(0)
  transition-timing-function: ease-out

.load-left, .load-right
  opacity: 0

.load-left
  transform: translateX(15px)

.load-right
  transform: translateX(-15px)

.delay-1
  transition-delay: 0.1s
.delay-2
  transition-delay: 1s

// media queries

@media (max-width: 1100px)
  .col
    &.left
      width: 30%
    &.right
      width: 70%

@media (max-width: 779px)
  .col
    &.left, &.right
      display: block
      text-align: left
      height: auto
      width: 100%

@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dppx)
  p
    font-size: 36px
  h1
    font-size: 48px
  .container
    position: relative
  .content-wrapper, .content
    display: block
    position: relative
    height: initial
    width: auto
  .col
    float: none
    &.left, &.right
      display: block
      text-align: left
      height: auto
      width: 100%
      p
        max-width: none